{
  "name": "ni-site-frontend",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:app": "npm --workspace @ni/app-main run dev",
    "dev:admin": "npm --workspace @ni/app-admin run dev",
    "build:app": "npm --workspace @ni/app-main run build",
    "build:admin": "npm --workspace @ni/app-admin run build",
    "preview:app": "npm --workspace @ni/app-main run preview",
    "preview:admin": "npm --workspace @ni/app-admin run preview",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@vitejs/plugin-react": "^4.3.1",
    "jsdom": "^24.1.3",
    "typescript": "^5.6.2",
    "vitest": "^1.6.0"
  }
}
